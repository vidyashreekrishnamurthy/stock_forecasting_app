// Java program to implement Linear Search
class GfG {
	public static void main(String args[]) {
	    int arr[] = { 2, 3, 4, 10, 40 };
		int x = 50; 	// Element to search
		int n = arr.length;
		for (int i = 0; i <= n; i++) 
		{   if( i == n )
			{   System.out.print("Element is not present"); 
			    break; 
			}
			if (arr[i] == x)
			{   System.out.print("Element is present"
							+ " at index "
							+ i);
					break; 
			}
		}
	}
}

